<Window x:Class="Assignment_1.SponsorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Assignment_1"
        mc:Ignorable="d"
        Title="SponsorWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock Text="Add Sponsor" FontSize="30" FontWeight="Bold" Margin="10,10,10,10"/>
            <TextBlock Text="Name" Margin="10,10,10,10"/>
            <TextBox Name="Name"  Margin="10,10,10,10"/>
            <TextBlock Text="Money" Margin="10,10,10,10"/>
            <TextBox Name="Money" Margin="10,10,10,10"/>
            <Button Name="AddButton" Content="Add Sponsor" Margin="10,10,10,10" Click="ADD_SPONSOR"/>
        </StackPanel>
    </Grid>
</Window>
