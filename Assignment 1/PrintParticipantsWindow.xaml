<Window x:Class="Assignment_1.PrintParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Assignment_1"
        mc:Ignorable="d"
        Title="PrintParticipantsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Print" Click="Print_Click" />
        <Button Grid.Row="0" Grid.Column="1" Content="Cancel" Click="Cancel_Click" />

        <StackPanel Grid.Row="1" Grid.Column="0">

            <Label Content="Select the sponsor"></Label>

            <ListView x:Name="SponsorList" SelectionChanged="SponsorList_SelectionChanged"></ListView>
        </StackPanel>

        <StackPanel Name="UserPanel" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">

            <Label Content="List of user for sponsor"></Label>

            <ListView x:Name="userListView"></ListView>
        </StackPanel>
    </Grid>
</Window>